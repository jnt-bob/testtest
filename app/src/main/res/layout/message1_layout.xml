<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/set"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/man"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center" >
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ambistion"
        android:textSize="30dp"
        android:theme="@style/MyEditText"
        android:textColor="@color/am_color">

    </EditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/house"
            android:layout_below="@id/yuan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom= "true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:src="@drawable/house"></ImageView>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70%"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom= "true"
            android:textColor="@color/am_color"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"></TextView>

        <ImageView
            android:id="@+id/tiao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom= "true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tiao"></ImageView>

        <ImageView
            android:id="@+id/ling"
            android:layout_width="110dp"
            android:layout_height="560dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ling"></ImageView>

        <ImageView
            android:id="@+id/zhu"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zhu"></ImageView>

        <ImageView
            android:id="@+id/yuan"
            android:layout_width="232dp"
            android:layout_height="274dp"
            android:layout_centerInParent="true"
            android:src="@drawable/yuan"></ImageView>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:layout_centerInParent="true"
            android:textColor="@color/am_color"
            android:textSize="70dp"></TextView>
    </RelativeLayout>
</LinearLayout>